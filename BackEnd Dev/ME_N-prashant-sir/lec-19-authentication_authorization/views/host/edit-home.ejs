<%- include('../partials/head') %>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  </head>

  <body class="bg-gray-100">
    <%- include('../partials/nav') %>
      <main class="container mx-auto mt-8 p-8 bg-white rounded-lg shadow-md max-w-2xl">
        <h1 class="text-3xl font-bold mb-6 text-center text-gray-800 border-b pb-4">
          <%= editing ? "Edit" : "Register" %> Your Home on AirBnB
        </h1>
        <form action="/host/<%= editing ? " edit-home" : "add-home" %>" method="POST" class="max-w-md mx-auto
          space-y-4">
          <input type="hidden" name="id" value="<%= home ? home._id : '' %>" />

          <!-- House Name field -->
          <div class="mb-4">
            <label for="houseName" class="block text-sm font-medium text-gray-700 mb-1">House Name</label>
            <div class="relative">
              <span class="absolute inset-y-0 left-0 flex items-center pl-3 text-gray-500">
                <i class="fas fa-home"></i>
              </span>
              <input type="text" id="houseName" name="houseName" placeholder="Enter your House Name"
                class="w-full pl-10 px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-red-500 transition"
                value="<%= editing ? home.houseName : '' %>" required />
            </div>
          </div>

          <!-- Price field -->
          <div class="mb-4">
            <label for="price" class="block text-sm font-medium text-gray-700 mb-1">Price Per Night</label>
            <div class="relative">
              <span class="absolute inset-y-0 left-0 flex items-center pl-3 text-gray-500">
                <i class="fas fa-dollar-sign"></i>
              </span>
              <input type="number" id="price" name="price" placeholder="Price Per Night"
                class="w-full pl-10 px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-red-500 transition"
                value="<%= editing ? home.price : '' %>" required />
            </div>
          </div>

          <!-- Location field -->
          <div class="mb-4">
            <label for="location" class="block text-sm font-medium text-gray-700 mb-1">Location</label>
            <div class="relative">
              <span class="absolute inset-y-0 left-0 flex items-center pl-3 text-gray-500">
                <i class="fas fa-map-marker-alt"></i>
              </span>
              <input type="text" id="location" name="location" placeholder="Enter House Location"
                class="w-full pl-10 px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-red-500 transition"
                value="<%= editing ? home.location : '' %>" required />
            </div>
          </div>

          <!-- Rating field -->
          <div class="mb-4">
            <label for="rating" class="block text-sm font-medium text-gray-700 mb-1">Rating (1-5)</label>
            <div class="relative">
              <span class="absolute inset-y-0 left-0 flex items-center pl-3 text-gray-500">
                <i class="fas fa-star"></i>
              </span>
              <input type="number" id="rating" name="rating" placeholder="Enter House Rating" min="1" max="5"
                class="w-full pl-10 px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-red-500 transition"
                value="<%= editing ? home.rating : '' %>" required />
            </div>
          </div>

          <!-- Photo URL field -->
          <div class="mb-4">
            <label for="photoUrl" class="block text-sm font-medium text-gray-700 mb-1">Photo URL</label>
            <div class="relative">
              <span class="absolute inset-y-0 left-0 flex items-center pl-3 text-gray-500">
                <i class="fas fa-image"></i>
              </span>
              <input type="text" id="photoUrl" name="photoUrl" placeholder="Enter House Image URL"
                class="w-full pl-10 px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-red-500 transition"
                value="<%= editing ? home.photoUrl : '' %>" required />
            </div>
          </div>

          <!-- Description field -->
          <div class="mb-6">
            <label for="description" class="block text-sm font-medium text-gray-700 mb-1">Description</label>
            <div class="relative">
              <span class="absolute top-3 left-3 text-gray-500">
                <i class="fas fa-align-left"></i>
              </span>
              <textarea id="description" name="description" placeholder="Describe your home" rows="4"
                class="w-full pl-10 px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-red-500 transition"><%= editing ? home.description : '' %></textarea>
            </div>
          </div>

          <!-- Submit button with animation -->
          <button type="submit"
            class="w-full bg-red-500 text-white py-3 rounded-md hover:bg-red-600 focus:ring-4 focus:ring-red-300 font-medium transition duration-300 flex items-center justify-center">
            <span>
              <%= editing ? "Update Home" : "Submit" %>
            </span>
            <i class="fas fa-check ml-2"></i>
          </button>
        </form>
      </main>
  </body>

  </html>